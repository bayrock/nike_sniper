{
  "name": "Nike Sniper",
  "manifest_version": 2,
  "version": "1.1",
  "author": "Bayrock",
  "description": "Nike Store Sniper",
  "options_ui": {
  "page": "options.html",
  "chrome_style": true
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "page_action": {
    "default_title": "Nike Sniper",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.nike.com/*"],
      "js": [
        "nikescan.js",
        "autocart.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "*://*.nike.com/*"
  ],
  "web_accessible_resources": [
    "script.js"
  ]
}
