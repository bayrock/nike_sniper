{
  "name": "Nike Sniper",
  "manifest_version": 2,
  "version": "1.1",
  "author": "Bayrock",
  "description": "Nike Store Sniper",
  "options_ui": {
  "page": "options.html",
  "chrome_style": true
  },
  "icons": {
    "128": "assets/Nike.png"
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "Nike Sniper"
  },
  "content_scripts": [
    {
      "matches": ["*://*.nike.com/*"],
      "js": [
        "nikescan.js",
        "autocart.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs" , "*://*.nike.com/*"
  ],
  "web_accessible_resources": [
    "script.js"
  ]
}
